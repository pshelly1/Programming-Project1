import java.util.Scanner;

public class estimator{
  public static void main(String[] args){

       System.out.println ("-----Welcome to EV savings estimator-----");
       System.out.println ("Please enter the following information:");
       double gallonprice.mpg,estimated,utility,totalmiles,savings;
       Scanner sc = new Scanner(System.in);
       System.out.print("Local fuel price/gallon: $");
       gallonprice =sc.nextDouble();
       System.out.print("Estimated mpg of gas vehicle:");
       mpg = sc.nextDouble();
       System.out.print("Estimated kWh per mile for EV:");
       estimated = sc.nextDouble();
       System.out.print("utility kWh rate: $");
       utility = sc.nextDouble();
       System.out.print("Total miles are driven per year:");
       totalmiles = sc.nextDouble();
       savings=(totalmiles/mpg)*gallonprice-
       totalmiles*estimated*utility;
       
       
       System.out.println("Based on data provided you save $" +savings+"per year by driving EV");

      


}
}
